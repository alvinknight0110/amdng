<div class="article_title">
    <span class="symbol"></span>
    <h2>資料填寫</h2>
</div>
<form name="applyInfo" ng-submit="applyInfo.$valid && $root.apply()">
    <div class="text_box section">
        <div class="text_section">
            <span>姓名：</span>
            <input type="text" name="UName" ng-model="request.UName" required />
        </div>
        <div class="text_section">
            <span>連絡電話：</span>
            <input type="text" name="UPhone" ng-model="request.UPhone" required />
        </div>
        <div class="text_section">
            <span>E-mail：</span>
            <input type="email" name="UEmail" ng-model="request.UEmail" required />
        </div>
        <div class="text_section">
            <span>發票號碼：</span>
            <div ng-messages="applyInfo.UInvoice.$error" style="display:inline; color:crimson;">
                <span ng-message="pattern">請輸入正確發票格式</span>
            </div>
            <input type="text" name="UInvoice" ng-model="request.UInvoice" ng-pattern="'^[a-zA-Z]{2}[0-9]{8}$'" maxlength="10" placeholder="英文2碼+數字8碼" required />
        </div>
        <div class="text_section">
            <span>CPU序號(套裝機不用) ：</span>
            <input type="text" name="UCPUSN" ng-model="request.UCPUSN" placeholder="SN後面13碼" />
        </div>
        <div class="text_section">
            <span>CPU型號：</span>
            <a data-fancybox="cpu" href="~/images/cpu_example.jpg">點擊看範例</a>
            <select name="UCPUType" ng-model="request.UCPUType">
                <option value="">選擇型號</option>
                <option>R9-3900X</option>
                <option>R7-3800X</option>
                <option>R7-3700X</option>
                <option>R5-3600X</option>
                <option>R5-3600</option>
                <option>R5-3400G</option>
                <option>R7-2700X</option>
                <option>R7-2700</option>
                <option>R5-2600X</option>
                <option>R5-2600</option>
                <option>R5-2400G</option>
            </select>
        </div>
        <div class="text_section">
            <span>購買店家：</span>
            <input type="text" name="UBuyStore" ng-model="request.UBuyStore" />
        </div>
        <div class="text_section">
            <span>Seagate SSD全系列：</span>
            <select name="USeagateType" ng-model="request.USeagate">
                <option>有購買</option>
                <option>無購買</option>
            </select>
        </div>
        <div class="text_section">
            <span>T-Force RGB系列記憶體：</span>
            <select name="UTForceType" ng-model="request.UTForce">
                <option>有購買</option>
                <option>無購買</option>
            </select>
        </div>
        <div class="text_section">
            <span>CPU盒裝照片上傳：</span>
            <a data-fancybox="cpu" href="~/images/cpu_example.jpg" title="範例" target="_blank">點擊看範例</a>
            <label class="btn" style="overflow:hidden;text-overflow:ellipsis;white-space:nowrap;">
                {{ request.CPUFile.name }}<span ng-show="request.CPUFile === undefined">上傳照片</span>
                <input name="UCPUPhoto" ng-model="request.CPUFile" type="file" class="hidden" accept="image/*" />
            </label>
        </div>
        <div class="text_section">
            <span>發票照片上傳：</span>
            <a data-fancybox="invoice" href="~/images/invoice_example.jpg" title="範例" target="_blank">點擊看範例</a>
            <label class="btn" style="overflow:hidden;text-overflow:ellipsis;white-space:nowrap;">
                {{ request.InvoiceFile.name }}<span ng-show="request.InvoiceFile === undefined">上傳照片</span>
                <input name="UInvoicePhoto" ng-model="request.InvoiceFile" type="file" class="hidden" accept="image/*" />
            </label>
        </div>
        <div class="check_section">
            <input id="agree" type="checkbox" ng-model="request.agree" required />
            <label for="agree">我同意以上內容送出</label>
        </div>
    </div>
    <div class="btn_box">
        <button class="btn">送出</button>
    </div>
</form>

